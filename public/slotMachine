const SpanM=(props)=>{
 let {x,y,z}=props;   
  if(x===y && y===z){
      return (
        <>
        <h2> {x} {y} {z}</h2>
        <h1>This is matching</h1>
        </>
      );
  }else{
    return(
        <>
        <h2> {x} {y} {z}</h2>
        <h1>This is not matching</h1>
        </>
    );
  }
}
